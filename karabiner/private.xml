<?xml version="1.0"?>
<root>
  <item>
    <name>Remap F19 to Hyper</name>
    <appendix>
      OS X doesn't have a Hyper. This maps F19 to Control + Option + Command.
    </appendix>
    <identifier>usercustom.f19_to_hyper</identifier>
    <autogen>
        --KeyToKey--
        KeyCode::F19,

        KeyCode::COMMAND_R,
        ModifierFlag::OPTION_R | ModifierFlag::CONTROL_R
    </autogen>
  </item>
  <item>
    <name>Remap Fn + Control_L to Caps Lock</name>
    <identifier>usercustom.fn_control_to_caps</identifier>
    <autogen>
        --KeyToKey--
        KeyCode::CONTROL_L,
        ModifierFlag::FN,

        KeyCode::CAPSLOCK
    </autogen>
  </item>
  <item>
    <name>Change Option + / to ✓</name>
    <identifier>private.option_slash_to_unicode_check</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::SLASH, ModifierFlag::OPTION_L,
      KeyCode::VK_CHANGE_INPUTSOURCE_UNICODEHEXINPUT,
      KeyCode::VK_WAIT_100MS,
      KeyCode::KEY_2, ModifierFlag::OPTION_L,
      KeyCode::KEY_7, ModifierFlag::OPTION_L,
      KeyCode::KEY_1, ModifierFlag::OPTION_L,
      KeyCode::KEY_3, ModifierFlag::OPTION_L,
      KeyCode::VK_CHANGE_INPUTSOURCE_US,
      Option::NOREPEAT
    </autogen>
  </item>
  <item>
    <name>Change Option + x to ✕</name>
    <identifier>private.option_x_to_unicode_x</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::X, ModifierFlag::OPTION_L,
      KeyCode::VK_CHANGE_INPUTSOURCE_UNICODEHEXINPUT,
      KeyCode::VK_WAIT_100MS,
      KeyCode::KEY_2, ModifierFlag::OPTION_L,
      KeyCode::KEY_7, ModifierFlag::OPTION_L,
      KeyCode::KEY_1, ModifierFlag::OPTION_L,
      KeyCode::KEY_5, ModifierFlag::OPTION_L,
      KeyCode::VK_CHANGE_INPUTSOURCE_US,
      Option::NOREPEAT
    </autogen>
  </item>
  <item>
    <name>Disable parentheses</name>
    <identifier>private.disable_parens</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_9, ModifierFlag::SHIFT_R,
      KeyCode::Q, ModifierFlag::COMMAND_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_9, ModifierFlag::SHIFT_L,
      KeyCode::Q, ModifierFlag::COMMAND_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_0, ModifierFlag::SHIFT_R,
      KeyCode::Q, ModifierFlag::COMMAND_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::KEY_0, ModifierFlag::SHIFT_L,
      KeyCode::Q, ModifierFlag::COMMAND_L
    </autogen>
  </item>
  <item>
    <name>Vi directional keys</name>
    <item>
      <name>Vi directional keys</name>
      <identifier vk_config="true">notsave.vi_directional_keys</identifier>
      <autogen>__KeyToKey__ KeyCode::H, KeyCode::CURSOR_LEFT</autogen>
      <autogen>__KeyToKey__ KeyCode::J, KeyCode::CURSOR_DOWN</autogen>
      <autogen>__KeyToKey__ KeyCode::K, KeyCode::CURSOR_UP</autogen>
      <autogen>__KeyToKey__ KeyCode::L, KeyCode::CURSOR_RIGHT</autogen>
    </item>
    <item>
      <name>Enable vi directional keys by holding W + Q.</name>
      <identifier>private.vi_directional_keys_on_wq</identifier>
      <autogen>
        __SimultaneousKeyPresses__
        KeyCode::W, KeyCode::Q,
        KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_vi_directional_keys,
      </autogen>
    </item>
  </item>
  <item>
    <name>Keyboard numpad keys</name>
    <item>
      <name>Keyboard numpad keys</name>
      <identifier vk_config="true">notsave.keyboard_numpad_keys</identifier>
      <autogen>__KeyToKey__ KeyCode::COMMA, KeyCode::KEYPAD_0</autogen>
      <autogen>__KeyToKey__ KeyCode::B, KeyCode::KEYPAD_1</autogen>
      <autogen>__KeyToKey__ KeyCode::N, KeyCode::KEYPAD_2</autogen>
      <autogen>__KeyToKey__ KeyCode::M, KeyCode::KEYPAD_3</autogen>
      <autogen>__KeyToKey__ KeyCode::H, KeyCode::KEYPAD_4</autogen>
      <autogen>__KeyToKey__ KeyCode::J, KeyCode::KEYPAD_5</autogen>
      <autogen>__KeyToKey__ KeyCode::K, KeyCode::KEYPAD_6</autogen>
      <autogen>__KeyToKey__ KeyCode::Y, KeyCode::KEYPAD_7</autogen>
      <autogen>__KeyToKey__ KeyCode::U, KeyCode::KEYPAD_8</autogen>
      <autogen>__KeyToKey__ KeyCode::I, KeyCode::KEYPAD_9</autogen>
    </item>
    <item>
      <name>Enable keyboard numpad keys by holding W + E.</name>
      <identifier>private.keyboard_numpad_keys_on_we</identifier>
      <autogen>
        __SimultaneousKeyPresses__
        KeyCode::W, KeyCode::E,
        KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_keyboard_numpad_keys,
      </autogen>
    </item>
  </item>
  <item>
    <name>Remap W + A to Escape</name>
    <identifier>usercustom.w_a_to_escape</identifier>
    <autogen>__SimultaneousKeyPresses__ KeyCode::W, KeyCode::A, KeyCode::ESCAPE</autogen>
  </item>
</root>
