source "%val{config}/basics.kak"
source "%val{config}/csharp.kak"
source "%val{config}/fzf.kak"
source "%val{config}/git.kak"
source "%val{config}/go.kak"
source "%val{config}/javascript.kak"

def wrap-comment -docstring "Wrap a commented section to ~80 characters" %{
  exec '<a-s>s^\s+(//|#)<ret>s\S+<ret>Lydx<a-m>|fmt -77<ret><a-s>giP'
}

def env -docstring 'load the local .kakenv file if present' %{%sh{
  [ -f .kakenv ] && echo 'source .kakenv'
}}

map global user b -docstring 'jump to buffer using fzf + tmux' :fzf-buffer<ret>
map global user f -docstring 'jump to file using fzf + tmux' :fzf-file<ret>
map global user l -docstring 'jump to line using fzf + tmux' :fzf-line<ret>
alias global jump nop
map global user s -docstring 'jump to symbol under cursor' :jump<ret>
